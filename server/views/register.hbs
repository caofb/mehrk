
<div class="row" id="registerPage">
	<div>
		<div class="well well-lg">
			<div class="alert alert-danger" id="register-error-notify" style="display:none">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<strong>注册失败，请再尝试。</strong> <p></p>
			</div>
			<form class="form-horizontal" role="form"  method="post"  data-bind="submit:registerUser">
				<div class="form-group">
					<label for="email" class="col-lg-4 control-label">邮箱地址</label>
					<div class="col-lg-8">
						<div class="input-group">
							<input class="form-control" type="text" placeholder="输入邮箱地址" name="email" id="email" data-bind="value:email"/>
					        <span class="input-group-addon">
					        	<span id="email-notify"><i class="glyphicon glyphicon-envelope"></i></span>
					        </span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="username" class="col-lg-4 control-label">用户名</label>
					<div class="col-lg-8">
						<div class="input-group">
							<input class="form-control" type="text" placeholder="输入用户名" name="username" id="username" data-bind="value:username"/>
					        <span class="input-group-addon">
					        	<span id="username-notify"><i class="glyphicon glyphicon-user"></i></span>
					        </span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="password" class="col-lg-4 control-label">密码</label>
					<div class="col-lg-8">
						<div class="input-group">
							<input class="form-control" type="password" placeholder="输入密码" name="password" id="password" data-bind="value:password"/>
					        <span class="input-group-addon">
					        	<span id="password-notify"><i class="glyphicon glyphicon-asterisk"></i></span>
					        </span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="password-confirm" class="col-lg-4 control-label">确认密码</label>
					<div class="col-lg-8">
						<div class="input-group">
							<input class="form-control" type="password" placeholder="再次输入密码" name="password-confirm" id="password-confirm" data-bind="value:confirmPassword"/>
							<span class="input-group-addon">
								<span id="password-confirm-notify"><i class="glyphicon glyphicon-asterisk"></i></span>
							</span>
						</div>
					</div>
				</div>

				<!-- ENDIF termsOfUse -->
				<div class="form-group">
					<div class="col-lg-offset-4 col-lg-8">
						<hr />
						<button class="btn btn-primary btn-lg btn-block" id="register" type="submit">现在注册</button>
					</div>
				</div>
				<input type="hidden" name="_csrf" value="{{token}}" id="csrf-token"/>
				<input id="referrer" type="hidden" name="referrer" value="" />
			</form>
		</div>
	</div>


</div>
